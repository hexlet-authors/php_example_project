<?xml version="1.0"?>
<ruleset name="PlatformApi">
    <description>PSR12 Laravel standards.</description>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="100"/>
    <arg value="np"/>

    <file>code/app</file>
    <file>code/resources</file>
    <file>code/routes</file>
    <file>code/tests</file>

    <exclude-pattern>*.blade.php</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>
    <exclude-pattern>*/Jobs/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/*</exclude-pattern>
    <exclude-pattern>*/database/seeds/DatabaseSeeder.php</exclude-pattern>
    <exclude-pattern>*/tests/TestCase.php</exclude-pattern>
    <exclude-pattern>*/tests/ExampleTest.php</exclude-pattern>

    <rule ref="PSR12" />
</ruleset>
